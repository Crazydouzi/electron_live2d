{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "composite": true,
    "strictFunctionTypes": false,
    "types": [
      "node",
      "electron-vite/node",
    ],
    "paths": {
      "@/*": [
        "./src/main/*"
      ],
    },
    "noImplicitAny": true,
  },
  "include": [
    "src/main/**/*",
    "src/renderer/**/*",
    "src/types.d.ts",
    "src/utils",
    "forge.*",
    "vite.*.config.ts",
    "src/main/preload.ts",
    "/model",
  ]
}
